#!/usr/bin/perl
use strict;
use warnings;
use Volans::CLI;

Volans::CLI->new->run(@ARGV);

__END__

=head1 NAME

volans - deploy tool 

=head1 SYNOPSIS

    # create config file
    mkdir ~/.volans
    cat >> ~/.volans/config.pl
    {
        hooks => {
            echo => sub { [qq{echo "hello $_[0]"}] },
        },
        commands => {
            'deploy' => {
                'before_hooks' => [qw/echo/],
                'after_hooks'  => [qw/echo/],
                'hosts'        => [qw/127.0.0.1/],
                'cmd'          => sub {
                    my ($host,$project) = @_;
                    [q{ssh %s 'echo "hello %s"'},$host,$project]; 
                },
            },
        },
    };
    
    % volans group_name 

        --help   Show this help

=head1 AUTHOR

Hiroyuki Yamanaka

=cut
